  {
      grant_type: client_credentials
      client_id: statement-service-admin-client
      client_secret: {{ADMIN_CLIENT_SECRET}}
  }
}

body:form-urlencoded {
  grant_type: client_credentials
  client_id: statement-service-admin-client
  client_secret: {{ADMIN_CLIENT_SECRET}}
}

vars:post-response {
  response: 
}

script:post-response {
      bru.setEnvVar('ADMIN_ACCESS_TOKEN', res.body.access_token);
}

settings {
  encodeUrl: true
  timeout: 0
}
